# DocBrain .env.sample - copy to .env and fill values
# Database (Postgres recommended) or sqlite URL for quick local testing (sqlite:///./data.db)
DATABASE_URL=postgresql://docbrain_user:password@localhost:5432/docbrain

# MinIO (object storage) - used by worker for blob storage
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Ollama / model router (if used)
OLLAMA_URL=http://localhost:11434

# Optional: secret key for any web components
SECRET_KEY=change-me

# Additional configuration
# REDIS_URL=redis://localhost:6379/0
# OTHER_API_KEY=
