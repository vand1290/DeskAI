# DeskAI OCR Environment Variables
# Copy to .env and fill in your paths

# Model paths (download to 02_models_data/ first)
TROCR_ONNX_PATH=02_models_data/trocr_base.onnx
PARSEQ_ONNX_PATH=02_models_data/parseq.onnx

# Ollama / Router (for document understanding after OCR)
OLLAMA_URL=http://localhost:12345
ROUTER_URL=http://localhost:8000

# Paths
EVAL_MANIFEST=ocr/eval/expected_manifest.json
CONFIG_PATH=ocr/config.yaml

# Locale
OCR_LOCALE=en_US

# GPU (if using CUDA/DirectML in onnxruntime)
ONNX_PROVIDER=CUDAExecutionProvider  # or "DirectMLExecutionProvider", "CPUExecutionProvider"
